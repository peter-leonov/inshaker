#!/bin/sh

NAME="inshaker"

PROJ_ROOT="/www/$NAME"
NGINX="/usr/local/nginx/sbin/nginx"
APACHE="/usr/local/apache/sbin/httpd"
TYPE="$SERVER_TYPE"

if [ "$TYPE" = "" ]; then
	TYPE="developer"
fi


echo "Starting $NAME as $TYPE..."

$NGINX -c "$PROJ_ROOT/nginx.$TYPE.conf"
$APACHE -f "$PROJ_ROOT/apache.$TYPE.conf"
