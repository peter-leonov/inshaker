#!/bin/sh

NAME="inshaker"
PROJ_ROOT="/www/$NAME"

NGINX="/usr/local/nginx/sbin/nginx"
SPAWN_FCGI="/usr/bin/spawn-fcgi"
CAT="/bin/cat"

TYPE="$SERVER_TYPE"
if [ "$TYPE" = "" ]; then
	TYPE="developer"
fi


echo "Starting $NAME as $TYPE..."

$NGINX -c "$PROJ_ROOT/nginx.$TYPE.conf"
$SPAWN_FCGI `$CAT "$PROJ_ROOT/spawn-fcgi.$TYPE.conf"`
