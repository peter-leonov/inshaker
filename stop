#!/bin/sh

PROJ_ROOT="$(cd "$(dirname "$0")" && pwd)/"

# stopping nginx.inshaker
PID="$PROJ_ROOT/logs/nginx.inshaker.pid"
if [ -f "$PID" ]; then
	kill -INT $(cat "$PID")
else
	echo "nginx wasn't started (no pid file found)"
fi
rm -f $PROJ_ROOT/logs/nginx.inshaker.sock

# stopping nginx.barman
PID="$PROJ_ROOT/logs/nginx.barman.pid"
if [ -f "$PID" ]; then
	kill -INT $(cat "$PID")
else
	echo "nginx wasn't started (no pid file found)"
fi
rm -f $PROJ_ROOT/logs/nginx.barman.sock


# stopping mini_httpd
PID="$PROJ_ROOT/logs/mini_httpd.pid"
if [ -f "$PID" ]; then
	kill -INT $(cat "$PID")
	rm -f "$PID"
else
	echo "mini_httpd wasn't started (no pid file found)"
fi
