#!/bin/sh

PROJ_ROOT="/www/inshaker"

# stopping nginx
if [ -f $PROJ_ROOT/logs/nginx.pid ]; then
	kill -INT $(cat $PROJ_ROOT/logs/nginx.pid)
else
	echo "nginx wasn't started (no pid file found)"
fi

# stopping mini_httpd
if [ -f $PROJ_ROOT/logs/mini_httpd.pid ]; then
	kill -INT $(cat $PROJ_ROOT/logs/mini_httpd.pid)
	rm -f $PROJ_ROOT/logs/mini_httpd.pid
else
	echo "mini_httpd wasn't started (no pid file found)"
fi
