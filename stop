#!/bin/sh

NAME="inshaker"

PROJ_ROOT="/www/$NAME"
TYPE="$SERVER_TYPE"

if [ "$TYPE" = "" ]; then
	TYPE="developer"
fi


echo "Stopping $NAME as $TYPE..."
# sending INT signal
if [ -f $PROJ_ROOT/nginx.pid ]; then
	kill -INT `cat $PROJ_ROOT/nginx.pid`
else
	echo "nginx was not started (no pid file found)"
fi

if [ -f $PROJ_ROOT/spawn-fcgi.pid ]; then
	kill -INT `cat $PROJ_ROOT/spawn-fcgi.pid`
else
	echo "spawn-fcgi was not started (no pid file found)"
fi